---
import { Image } from "astro:assets"
import AntLayout from "@layouts/AntLayout.astro"
import { getEntry } from "astro:content"
import { appConfig } from "@core/config"
import aboutimg2 from "@assets/img/breadcrumbs-bg.jpg"
import educ from "@assets/img/education.jpg"
const education = await getEntry("articles", "education")
// const solutions = await getEntry('articles', 'oursolutions')
const { Content: Room } = await education.render()
// const { Content: Solutions } = await solutions.render()
const title = "Обучение"
---

<AntLayout title={title} config={appConfig}>
	<!-- ======= Breadcrumbs ======= -->
	<div
		class="breadcrumbs d-flex align-items-center"
		style=`background-image: url(${aboutimg2.src});`
	>
		<div
			class="container position-relative d-flex flex-column"
			data-aos="fade"
		>
			<h3>{title}</h3>
			<ol>
				<li><a href="/">Главная</a></li>
				<li>{title}</li>
			</ol>
		</div>
	</div>

	<!-- ======= Blog Details Section ======= -->
	<section id="blog" class="blog">
		<div class="container" data-aos="fade-up" data-aos-delay="100">
			<div class="row g-5">
				<div class="col-lg-8">
					<article class="blog-details">
						<div class="post-img">
							<Image src={educ} alt="descriptive text" />
						</div>

						<h2 class="title">{education.data.title}</h2>

						<div class="meta-top">
							<ul>
								<li class="d-flex align-items-center">
									<i class="bi bi-person"></i>
									<a href="blog-details.html">
										{education.data.title}
									</a>
								</li>
								<li class="d-flex align-items-center">
									<i class="bi bi-clock"></i>
									<a href="blog-details.html">
										<time datetime="2020-01-01">
											Jan 1, 2022
										</time>
									</a>
								</li>
								<li class="d-flex align-items-center">
									<i class="bi bi-chat-dots"></i>
									<a href="blog-details.html">12 Comments</a>
								</li>
							</ul>
						</div><!-- End meta top -->

						<div class="content">
							<Room />
						</div><!-- End post content -->

						<div class="meta-bottom"></div><!-- End meta bottom -->
					</article><!-- End blog post -->

					<div class="post-author d-flex align-items-center">
						<div>
							<h4>{education.data.author}</h4>
							<div class="social-links">
								<a href="https://twitters.com/#">
									<i class="bi bi-twitter"></i>
								</a>
