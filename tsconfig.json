{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "./src/@core/types.d.ts",
            "node",
        ],
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "./src/components/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ],
            "@core/*": [
                "./src/@core/*"
            ],
            "@layouts/*": [
                "./src/layouts/*"
            ]
        }
    }
}